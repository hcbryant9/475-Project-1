<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/info_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.TutorialActivity">

    <TextView
        android:id="@+id/tutoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="cursive"
        android:shadowColor="@color/white"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:text="Rules And Information"
        android:textColor="#F10606"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_headtitle" />

    <TextView
        android:id="@+id/infoText"
        android:layout_width="394dp"
        android:layout_height="177dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="4dp"
        android:text="     Square Off (also known as Dots and Boxes, Squares, Paddocks, Pigs in a Pen, Square-it, Dots and Dashes, Dots, Smart Dots, Dot Boxing, simply, the Dot Game) is a pencil and paper game for two players (or sometimes, more than two) first published in 1889 by Edouard Lucas."
        android:textColor="@color/white"
        android:textSize="21sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tutoTitle" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="173dp"
        android:layout_height="179dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoText"
        app:srcCompat="@drawable/sample_img" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="234dp"
        android:layout_height="169dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="8dp"
        android:text="    Starting with an empty grid of dots, players take turns, adding a single horizontal or vertical line between two unjoined adjacent dots."
        android:textColor="@color/white"
        android:textSize="21sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoText" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="406dp"
        android:layout_height="230dp"
        android:text="    A player who completes the fourth side of a 1 x1 box earns one point and takes another turn. (The points are typically recorded by placing in the box an identifying mark of the player, such as an initial). The game ends when no more lines can be placed. The winner of the game is the player with the most points. The board may be of any size, but we only have 3x3, 4x4, and 6x6."
        android:textColor="@color/white"
        android:textSize="20.5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/info_headtitle"
        android:layout_width="413dp"
        android:layout_height="69dp"
        android:fontFamily="@font/black_ops_one"
        android:shadowColor="#EFEBEB"
        android:shadowDx="5"
        android:shadowRadius="5"
        android:text="Square Off !!"
        android:textAlignment="center"
        android:textColor="#2196F3"
        android:textSize="60sp"
        android:textStyle="bold"
        app:flow_horizontalAlign="center"
        app:flow_verticalAlign="center"
        app:layout_constraintBottom_toTopOf="@+id/tutoTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>